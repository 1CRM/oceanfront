{
  "name": "oceanfront-html-editor",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "main": "dist/oceanfront-html-editor.umd.js",
  "module": "dist/oceanfront-html-editor.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/oceanfront-html-editor.mjs",
      "require": "./dist/oceanfront-html-editor.umd.js"
    },
    "./css": "./dist/oceanfront-html-editor.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "vite build",
    "build-dev": "vite build -m development",
    "package": "yarn pack",
    "clean": "rm -rf .turbo .vite node_modules dist",
    "coverage": "vitest run --coverage",
    "demo": "vite build -m development --watch",
    "lint": "eslint src --ext .ts,.vue",
    "test": "vitest --watch=false"
  },
  "peerDependencies": {
    "oceanfront": "*",
    "vue": "~3.5.25"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.0",
    "@tiptap/core": "^3.12.1",
    "@tiptap/extension-color": "^3.12.1",
    "@tiptap/extension-font-family": "^3.12.1",
    "@tiptap/extension-highlight": "^3.12.1",
    "@tiptap/extension-image": "^3.12.1",
    "@tiptap/extension-table": "^3.12.1",
    "@tiptap/extension-text-align": "^3.12.1",
    "@tiptap/extension-text-style": "^3.12.1",
    "@tiptap/pm": "^3.12.1",
    "@tiptap/starter-kit": "^3.12.1",
    "@tiptap/vue-3": "^3.12.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "@vitejs/plugin-vue": "~6.0.2",
    "@vitest/coverage-v8": "^4.0.15",
    "@vue/test-utils": "2.4.6",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vitest": "^0.5.4",
    "eslint-plugin-vue": "^10.6.2",
    "jsdom": "^27.2.0",
    "oceanfront": "*",
    "prettier": "^3.7.4",
    "tslib": "~2.8.1",
    "typescript": "~5.9.3",
    "unplugin-auto-import": "~0.6.9",
    "vite": "~7.2.6",
    "vite-plugin-dts": "~4.5.4",
    "vitest": "^4.0.15",
    "vue": "~3.5.25",
    "vue-eslint-parser": "^10.2.0"
  },
  "sideEffects": [
    "*.css",
    "*.scss"
  ]
