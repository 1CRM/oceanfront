{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "outDir": "dist",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    // "allowSyntheticDefaultImports": true,
    // "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "jest",
      "resize-observer-browser"
    ],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}