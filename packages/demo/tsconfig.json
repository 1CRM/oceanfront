{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "isolatedModules": true, // required for vite
    "moduleResolution": "node",
    "esModuleInterop": true,
    // "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
    ],
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "src/**/*.vue",
  ],
  "exclude": [
    "node_modules"
  ]
}