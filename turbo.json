{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "lib/**"]
    },
    "build-dev": {
      "dependsOn": ["^build-dev"],
      "outputs": ["dist/**", "lib/**"]
    },
    "package": {
      "cache": false,
      "dependsOn": ["build"]
    },
    "clean": {
      "cache": false
    },
    "coverage": {},
    "test": {},
    "lint": {},
    "demo": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build-dev"]
    }
  }
}
